{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
<div class="container">
    <h2 class="text-center mt-5 mb-3">Symfony Invoice Manager</h2>
    <div class="card">
        <div class="card-header">
            <a class="btn btn-outline-primary" href="{{ path('invoice_new') }}">
                Create New Invoice
            </a>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Nunber</th>
                    <th>Custome ID</th>
                    <th>Date</th>
                    <th width="240px">Action</th>
                </tr>
                {% for invoice in invoices %}
                <tr>
                    <td>{{ invoice.number }}</td>
                    <td>{{ invoice.customer }}</td>
                    <td>{{ invoice.date ? invoice.date|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <form method="post" action="{{ path('invoice_delete', {'id': invoice.id}) }}"
                            onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <a class="btn btn-outline-info" href="{{ path('invoice_show', {'id': invoice.id}) }}">
                                Show
                            </a>
                            <a class="btn btn-outline-success" href="{{ path('invoice_edit', {'id': invoice.id}) }}">
                                Edit
                            </a>

                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>

{% endblock %}